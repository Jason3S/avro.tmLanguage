{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Avro",
	"foldingStartMarker": "({|\\()\\s*$",
	"foldingStopMarker": "(}|\\))\\s*$",
	"patterns": [
		{"include": "#comments"},
		{"include": "#decorators"},
		{"include": "#protocol"},
		{"include": "#contents"}
	],
	"repository": {
		"protocol": {
			"patterns": [
				{
					"begin": "\\b(protocol)\\s+(\\w+)\\s*{",
					"end": "}",
					"beginCaptures": {
						"1": {"name": "keyword.struct.avro"},
						"2": {"name": "entity.name.type.avro"}
					},
					"patterns": [
						{"include": "#contents"}
					]
				}
			]
		},
		"contents": {
			"patterns": [
				{"include": "#decorators"},
				{"include": "#function"},
				{"include": "#record"},
				{"include": "#error"},
				{"include": "#declaration"},
				{"include": "#comments"},
				{"include": "#import"},
				{"include": "#strings"},
				{"include": "#union"},
				{"include": "#collections"},
				{"include": "#keywords"},
				{"include": "#constants"}
			]
		},
		"comments": {
			"name": "meta.comments",
			"patterns": [
				{
					"begin": "//",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.avro"
						}
					},
					"end": "$",
					"name": "comment.line.double-slash.avro"
				},
				{
					"name": "comment.block.avro",
					"begin": "/\\*",
					"end": "\\*/",
					"captures": {"0": {"name": "punctuation.definition.comment.avro"}}
				}
			]
		},
		"decorators": {
			"patterns": [
				{
					"name": "meta.decorator",
					"begin": "(@)([-\\w]+)\\s*\\(",
					"end": "\\)",
					"beginCaptures": {
						"1": {"name":"keyword.avro"},
						"2": {"name":"entity.name.tag.avro"}
					},
					"contentName": "meta.decorator.avro",
					"patterns": [{ "include": "#object"}]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.struct.avro",
					"match": "\\b(protocol|record)\\b"
				},
				{
					"name": "keyword.control.avro",
					"match": "(@namespace|@extends|@import|throws)\\b"
				},
				{ "include": "#types" },
				{
					"name":"constant.language.avro",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name":"constant.language.avro",
					"match": "\\b[A-Z][A-Z0-9_]*\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name":"constant.language.avro",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name":"constant.language.avro",
					"match": "\\b[A-Z][A-Z0-9_]*\\b"
				},
				{
					"name":"constant.numeric.avro",
					"match": "\\b[0-9]+(\\.[0-9]*)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.primitive.avro",
					"match": "\\b(int|long|string|boolean|float|double|null|bytes)\\b"
				},
				{
					"name": "support.type.logical.avro",
					"match": "\\b(decimal|date|time_ms|timestamp_ms)\\b"
				},
				{
					"name": "support.type.primitive.avro",
					"match": "\\b(uint|fixed|void)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.avro",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.avro",
					"match": "\\\\."
				}
			]
		},
		"import": {
			"patterns": [
				{
					"match": "\\b(import)\\s+(idl|protocol|schema)\\s+([^;]+);",
					"captures": {
						"1": { "name": "keyword.avro"},
						"2": { "name": "keyword.avro"},
						"3": { "patterns": [{"include": "#strings"}]}
					}
				}
			]
		},
		"declaration": {
			"patterns": [
				{
					"begin": "\\b(enum)\\s+(\\w+)\\s*{",
					"end": "}",
					"beginCaptures": {
						"1": { "name": "keyword.struct.enum.avro" },
						"2": { "name": "entity.name.type.avro" }
					},
					"patterns": [
						{"include": "#contents"}
					]
				}
			]
		},
		"record": {
			"patterns": [
				{
					"begin": "\\b(record)\\s+(\\w*)\\s*{",
					"end": "}",
					"beginCaptures": {
						"1": { "name": "keyword.struct.record.avro" },
						"2": { "name": "entity.name.type.avro" }
					},
					"contentName": "meta.record.avro",
					"patterns": [
						{"include": "#comments"},
						{"include": "#field"}
					]
				}
			]
		},
		"error": {
			"patterns": [
				{
					"begin": "\\b(error)\\s+(\\w*)\\s*{",
					"end": "}",
					"beginCaptures": {
						"1": { "name": "keyword.struct.error.avro" },
						"2": { "name": "entity.name.type.avro" }
					},
					"contentName": "meta.error.avro",
					"patterns": [
						{"include": "#comments"},
						{"include": "#decorators"},
						{"include": "#field"}
					]
				}
			]
		},
		"variable":{
			"match": "(`?)(\\w+)(`?)",
			"captures": {
				"1": { "name": "variable.name.escape.avro" },
				"2": { "name": "variable.name.avro" },
				"3": { "name": "variable.name.escape.avro" }
			}
		},
		"field_default_value": {
			"name": "meta.default.avro",
			"begin": "=",
			"end": "(?=;)",
			"patterns": [
				{"include": "#strings"},
				{"include": "#object"},
				{"include": "#constants"}
			]
		},
		"field_user_type_entry": {
			"name": "meta.field.user.avro",
			"begin": "\\b\\w+",
			"beginCaptures": { "0": { "name": "entity.name.type.avro"}},
			"end": "(?=;)",
			"patterns": [
				{"include": "#decorators"},
				{"include": "#variable"},
				{"include": "#comments"},
				{"include": "#field_default_value"}
			]
		},
		"field_base_type_entry": {
			"name": "meta.field.base.avro",
			"begin": "(?=(?:map|array|union|int|long|string|boolean|float|double|null|bytes|decimal|date|time_ms|timestamp_ms))",
			"end": "(?=;)",
			"patterns": [
				{"include": "#union"},
				{"include": "#collections"},
				{"include": "#types"},
				{"include": "#decorators"},
				{"include": "#variable"},
				{"include": "#comments"},
				{"include": "#field_default_value"}
			]
		},
		"field": {
			"name": "meta.field",
			"begin": "(?=\\S)",
			"end": ";",
			"patterns": [
				{"include": "#decorators"},
				{"include": "#field_base_type_entry"},
				{"include": "#field_user_type_entry"}
			]
		},
		"union": {
			"patterns": [
				{
					"begin": "\\b(union)\\s*{",
					"end": "}",
					"beginCaptures": {
						"1": {"name":"keyword.struct.union.avro"}
					},
					"contentName": "meta.type.union.avro",
					"patterns": [
						{"include": "#contents"}
					]
				}
			]
		},
		"collections": {
			"name": "meta.collection",
			"patterns": [
				{
					"begin": "\\b(array|map)\\s*<",
					"end": ">",
					"beginCaptures": {
						"1": {"name":"storage.type.collection.avro"}
					},
					"contentName": "meta.type.collection.avro",
					"patterns": [
						{"include": "#types"},
						{"include": "#comments"},
						{"include": "#decorators"},
						{
							"name": "entity.name.type",
							"match": "\\w+"
						}
					]
				}
			]
		},
		"function_param_default_value": {
			"name": "meta.default.avro",
			"begin": "=",
			"end": "(?=[,)])",
			"patterns": [
				{"include": "#strings"},
				{"include": "#object"},
				{"include": "#constants"}
			]
		},
		"function_param": {
			"name": "meta.function.param",
			"begin": "(?!=\\))",
			"end": ",|(?=\\))",
			"patterns": [
				{"include": "#union"},
				{"include": "#collections"},
				{"include": "#types"},
				{"include": "#decorators"},
				{"include": "#variable"},
				{"include": "#comments"},
				{"include": "#function_param_default_value"}
			]
		},
		"function": {
			"name": "meta.function",
			"begin": "\\b([\\w`]+)\\(",
			"end": "\\)",
			"contentName": "meta.function.parameters.avro",
			"beginCaptures": {
				"1": {
					"name": "meta.function.name.avro",
					"patterns": [{
						"name":"entity.name.function.avro",
						"match": "\\w+"
					}]
				}
			},
			"patterns": [
				{"include": "#function_param"}
			]
		},
		"object": {
			"patterns": [
				{
					"begin": "\\[",
					"end": "\\]",
					"patterns": [{ "include": "#object"}]
				},
				{
					"begin": "{",
					"end": "}",
					"patterns": [
						{"include": "#object"}
					]
				},
				{"include": "#strings"},
				{"include": "#constants"},
				{"include": "#comments"}
			]
		}
	},
	"scopeName": "source.avro"
}
